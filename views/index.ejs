<%include ./partials/header %>


<div class="container">
    <h1 id="indexHeader" class="text-center display-4 pt-5">My Workouts</h1>
    <hr class=" mb-4">
    
    <div class="row text-center" >
            <% workouts.forEach(function(workout){%>
            <div class="col-lg-3 col-sm-6 mb-4">
                <div class="card text-center">
                    <img src="<%= workout.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= workout.name %></h5>
                        <hr class="m-2">
                        <h5 class="card-title"><%= workout.date.toDateString() %></h5>
                        <p class="card-text"><%= workout.calories %> Calories Burned</p>
                        <a id="dets" href="/workouts/<%= workout._id %>" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    
    
</div>

<%include ./partials/footer %>